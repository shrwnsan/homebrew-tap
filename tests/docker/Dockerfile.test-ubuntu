# Optimized Ubuntu Docker environment for brew-change testing with real Homebrew
# Using Ubuntu 24.04 (noble) LTS for latest features and official Homebrew support

FROM ubuntu:24.04

# Environment variables
ENV DEBIAN_FRONTEND="noninteractive"
ENV PATH="/home/brewtest/.linuxbrew/bin:/home/brewtest/.linuxbrew/sbin:$PATH"

# Install system dependencies for Homebrew
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    jq \
    ca-certificates \
    python3 \
    python3-pip \
    ruby \
    ruby-dev \
    perl \
    procps \
    coreutils \
    findutils \
    nodejs \
    npm \
    wget \
    vim \
    gh \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
# Use different GID to avoid Ubuntu conflicts
RUN addgroup --gid 2000 brewtest && \
    adduser --disabled-password --gecos '' --uid 2000 --gid 2000 brewtest

# Set up directories for brewtest user
RUN mkdir -p /home/brewtest && \
    chown brewtest:brewtest /home/brewtest

# Switch to non-root user for Homebrew installation
USER brewtest
WORKDIR /home/brewtest

# Install Homebrew in brewtest user directory (for permissions)
RUN mkdir -p /home/brewtest/.linuxbrew && \
    git clone https://github.com/Homebrew/brew /home/brewtest/.linuxbrew/Homebrew && \
    mkdir -p /home/brewtest/.linuxbrew/bin && \
    ln -s ../Homebrew/bin/brew /home/brewtest/.linuxbrew/bin/brew && \
    /home/brewtest/.linuxbrew/bin/brew update --force --quiet

# Install lightweight testing packages for fast build times
# These provide realistic test data for brew-change without heavy runtime packages
# openssl@3.5 is included for outdated detection testing (when 3.6+ becomes available)
# || true ignores post-install failures to keep Docker builds reliable
RUN /home/brewtest/.linuxbrew/bin/brew install --quiet \
    jq \
    yq \
    tree \
    htop \
    openssl@3.5 || true && \
    /home/brewtest/.linuxbrew/bin/brew cleanup --prune=7

# Copy brew-change files
COPY --chown=brewtest:brewtest brew-change /home/brewtest/brew-change/bin/brew-change
COPY --chown=brewtest:brewtest lib/ /home/brewtest/brew-change/lib/

# Make brew-change executable
RUN chmod +x /home/brewtest/brew-change/bin/brew-change

# Add brew-change to PATH
ENV PATH="/home/brewtest/.linuxbrew/bin:/home/brewtest/brew-change/bin:$PATH"

# Copy test script for compatibility
COPY --chown=brewtest:brewtest tests/docker/test-brew-change.sh /home/brewtest/test-error-handling.sh
RUN chmod +x /home/brewtest/test-error-handling.sh

# Set working directory
WORKDIR /home/brewtest

# Default command - start bash for interactive testing
ENTRYPOINT ["/bin/bash"]